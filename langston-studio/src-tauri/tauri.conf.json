{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Langston Studio",
  "version": "0.4.0",
  "identifier": "co.langston.studio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Langston Studio",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' https://js.sentry-cdn.com; style-src 'self' 'unsafe-inline'; frame-src http://localhost:*; connect-src http://localhost:* https://*.ingest.us.sentry.io https://*"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../resources/workspace-template": "workspace-template"
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
